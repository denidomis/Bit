<form action="/api/book/add-book" method="post">
  <label for="title">Title:</label>
  <input
    type="text"
    id="title"
    name="title"
    required
    minlength="7"
    maxlength="70"
  /><br />

  <div class="authorName">
    <label for="authorFirstName">Author First Name:</label>
    <input
      type="text"
      id="authorFirstName"
      name="authorFirstName"
      required
      maxlength="70"
    />

    <label for="authorLastName">Author Last Name:</label>
    <input
      type="text"
      id="authorLastName"
      name="authorLastName"
      required
      maxlength="70"
    />
  </div>
  <br />

  <label for="releaseDate">Release Date:</label>
  <input type="date" id="releaseDate" name="releaseDate" required /><br />

  <label for="language">Language:</label>
  <input
    type="text"
    id="language"
    name="language"
    required
    maxlength="120"
  /><br />

  <label for="bookPicture">Book Picture URL:</label>
  <input type="file" id="bookPicture" name="img" accept="image/*" /><br />

  <input type="submit" value="Submit" />
</form>
